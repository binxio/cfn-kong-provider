{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Demo Kong Custom Provider CloudFormation ",
  "Parameters": {
    "AdminURL": {
      "Type": "String",
      "Description": "the Kong admin URL, must be reachable from the Lambda "
    }
  },
  "Resources": {
    "HeaderAPI": {
      "Type": "Custom::KongAPI",
      "Properties": {
        "API": {
          "name": "header-api",
          "uris": [
            "/headers"
          ],
          "upstream_url": "https://httpbin.org"
        },
        "AdminURL": { "Ref": "AdminURL" },
        "ServiceToken": { "Fn::Join": [ ":", [ "arn:aws:lambda", { "Ref": "AWS::Region" }, { "Ref": "AWS::AccountId" }, "function:binxio-cfn-kong-provider" ]]}
      }
    },
    "KeyAuthPlugin": {
      "Type": "Custom::KongPlugin",
      "DependsOn": "HeaderAPI",
      "Properties": {
        "Plugin": {
          "name": "key-auth",
          "api_id": { "Fn::GetAtt": [ "HeaderAPI", "id" ] }
        },
        "AdminURL": { "Ref": "AdminURL" },
        "ServiceToken": { "Fn::Join": [ ":", [ "arn:aws:lambda", { "Ref": "AWS::Region" }, { "Ref": "AWS::AccountId" }, "function:binxio-cfn-kong-provider" ]]}
      }
    },
    "KongConsumer": {
      "Type": "Custom::KongConsumer",
      "Properties": {
        "Consumer": {
          "username": "johndoe"
        },
        "AdminURL": { "Ref": "AdminURL" },
        "ServiceToken": { "Fn::Join": [ ":", [ "arn:aws:lambda", { "Ref": "AWS::Region" }, { "Ref": "AWS::AccountId" }, "function:binxio-cfn-kong-provider" ]]}
      }
    },
    "KongConsumerACL": {
      "Type": "Custom::KongACL",
      "DependsOn": "KongConsumer",
      "Properties": {
        "ACL": {
          "consumer_id": { "Fn::GetAtt":  [ "KongConsumer", "id" ] },
          "group": "admin"
        },
        "AdminURL": { "Ref": "AdminURL" },
        "ServiceToken": { "Fn::Join": [ ":", [ "arn:aws:lambda", { "Ref": "AWS::Region" }, { "Ref": "AWS::AccountId" }, "function:binxio-cfn-kong-provider" ]]}
      }
    },
    "KongConsumerApiKey": {
      "Type": "Custom::KongCredential",
      "DependsOn": "KongConsumer",
      "Properties": {
        "PluginName": "key-auth",
        "Credential": {
          "consumer_id": { "Fn::GetAtt":  [ "KongConsumer", "id" ] },
          "key": "66471684-6BDF-4F11-868F-B513CC391520"
        },
        "AdminURL": { "Ref": "AdminURL" },
        "ServiceToken": { "Fn::Join": [ ":", [ "arn:aws:lambda", { "Ref": "AWS::Region" }, { "Ref": "AWS::AccountId" }, "function:binxio-cfn-kong-provider" ]]}
      }
    },
    "KongConsumerBasicAuth": {
      "Type": "Custom::KongCredential",
      "DependsOn": "KongConsumer",
      "Properties": {
        "PluginName": "basic-auth",
        "Credential": {
          "consumer_id": { "Fn::GetAtt":  [ "KongConsumer", "id" ] },
          "username": "johndoe",
          "password": "tiger"
        },
        "AdminURL": { "Ref": "AdminURL" },
        "ServiceToken": { "Fn::Join": [ ":", [ "arn:aws:lambda", { "Ref": "AWS::Region" }, { "Ref": "AWS::AccountId" }, "function:binxio-cfn-kong-provider" ]]}
      }
    }
  }
}
